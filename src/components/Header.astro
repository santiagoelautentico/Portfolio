---
import Layout from "../layouts/Layout.astro"
---

<Layout>
    <header>
        <ul>
            <li><a href="/">Top</a></li>
            <li><a href="/works">Works</a></li>
            <li><a href="/about">About me</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </header>
</Layout>

<script>
    if(window.location.pathname === "/"){
        const homeLink = document.querySelector("a[href='/']") as HTMLElement;
        if (homeLink) homeLink.style.color = "#2ec21e";
    } else if(window.location.pathname === "/works"){
        const workLink = document.querySelector("a[href='/works']") as HTMLElement;
        if (workLink) workLink.style.color = "#2ec21e";
    } else if(window.location.pathname === "/about"){
        const aboutLink = document.querySelector("a[href='/about']") as HTMLElement;
        if (aboutLink) aboutLink.style.color = "#2ec21e";
    } else if(window.location.pathname === "/contact"){
        const contactLink = document.querySelector("a[href='/contact']") as HTMLElement;
        if (contactLink) contactLink.style.color = "#2ec21e";
        
    }
</script>
<style>
    header {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 1rem;
        z-index: 100;
    a {
        text-decoration: none;
        font-family: pixelFont;
        color: #ffffff;
        font-size: 1.2rem;
        font-weight: 200;
        transition: color 0.3s;
        position: relative; /* Necesario para posicionar el pseudo-elemento */
    }
    a::before {
        content: '';
        position: absolute;
        top: -8px; /* Ajusta la distancia desde el texto */
        left: 0;
        width: 100%;
        height: 2px; /* Ajusta el grosor de la línea */
        background-color: #2fff0041; /* Ajusta el color de la línea */
        transform: scaleX(0.5);
        transform-origin: left;
        transition: transform 0.3s;
    }
    a:hover::before {
        transform: scaleX(1);
        transform-origin: left;
        background-color: #2ec21e;
    }
    ul {
        list-style-type: none;
        display: flex;
        gap: 1rem;
    }
    li {
        padding: 0.5rem;
        border-radius: 5px;
        cursor: pointer;
    }
    a:hover {
        color: #2ec21e;
    }
</style>